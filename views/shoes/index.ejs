<%- include("../partials/header") %>
<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome To ShowTaste !</h1>
            <p>View our hand-picked sneakers from all over the world</p>
            <p>
                <a class="btn btn-primary btn-large" href="/shoes/new">Add New sneaker</a>
            </p>
        </div>
        
    </header>
    
    <div class="row text-center" style="display: flex; flex-wrap: wrap;">
        <% shoes.forEach(function(shoe){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src = "<%= shoe.image %>">   
                    <div class="caption">
                        <h4><%= shoe.name %></h4>
                    </div> 
                    <p>
                        <a href="/shoes/<%= shoe._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }) %>    
    </div>
</div>


<%- include("../partials/footer") %>


