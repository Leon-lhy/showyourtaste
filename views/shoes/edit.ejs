<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= shoe.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action = "/shoes/<%= shoe._id %>/?_method=PUT" method = "POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="shoe[name]" value="<%= shoe.name %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number" name="shoe[price]" value="<%= shoe.price %>" min="0.01" step="0.1">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="shoe[image]" value="<%= shoe.image %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="text" name="shoe[description]" value="<%= shoe.description %>">
                </div>

                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/shoes">Go Back</a>
        </div>
        

    </div>
    
</div>


<%- include("../partials/footer") %>